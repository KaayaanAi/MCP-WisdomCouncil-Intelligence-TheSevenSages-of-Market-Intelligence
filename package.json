{
  "name": "mcp-nextgen-financial-intelligence",
  "version": "2.0.0",
  "description": "Enterprise-grade MCP server delivering real-time financial intelligence through 7 specialized AI analyst personas with multi-provider support, security hardening, and comprehensive market analysis",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-financial-intelligence": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/http-server.js",
    "start": "node build/index.js",
    "start:http": "HTTP_MODE=true node build/index.js",
    "dev": "npm run build && npm start",
    "dev:http": "npm run build && npm run start:http",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "financial-intelligence",
    "market-analysis",
    "ai-analysts",
    "trading",
    "finance",
    "geopolitical",
    "sentiment-analysis",
    "openai",
    "claude-desktop",
    "real-time-news",
    "consensus-analysis",
    "enterprise-security",
    "docker-ready",
    "typescript",
    "rest-api",
    "financial-data",
    "investment-analysis",
    "risk-assessment",
    "multi-provider",
    "production-ready"
  ],
  "author": "Kaayaan Ai",
  "license": "MIT",
  "homepage": "https://github.com/kaayaan-ai/mcp-nextgen-financial-intelligence#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaayaan-ai/mcp-nextgen-financial-intelligence.git"
  },
  "bugs": {
    "url": "https://github.com/kaayaan-ai/mcp-nextgen-financial-intelligence/issues"
  },
  "community": {
    "discord": "https://discord.com/channels/1413326280518140014/1413326281487155241",
    "telegram": "https://t.me/KaayaanAi"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "rss-parser": "^3.13.0",
    "mongodb": "^6.3.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3"
  }
}